

@model FoodBank.Core.Dto.Order.OrderIndexModel

@{
    ViewBag.Title = "Supplier Orders";
    ViewBag.MenuItem = "orders";
}
@section pagejs{
    <script type="text/javascript" src="/assets/js/plugins/tables/datatables/datatables.min.js"></script>
    <script type="text/javascript" src="/assets/js/plugins/forms/selects/select2.min.js"></script>

    <script type="text/javascript" src="/assets/js/core/app.js"></script>
    <script type="text/javascript" src="/assets/js/pages/datatables_advanced.js"></script>

    @* @Html.Partial("~/Views/Shared/Modal/DeleteModal.cshtml", Url.Action("Remove", "Controller"))*@

}
<!-- Page header -->
@Html.Partial("Page/PageHeader")
<!-- /page header -->
<!-- Content area -->
<div class="content">
    <!-- Page length options -->
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title">Supplier Orders</h5>
            <div class="heading-elements">

                <div class="text-right">
               
                </div>

            </div>
        </div>
        <div class="panel-body">
            Supplier Orders
        </div>
        <table class="table datatable-show-all">
            <thead>
            <tr>
                <th>OrderId</th>
                <th>Bank</th>
                <th>Date</th>
                <th>Status</th>
                <th class="text-center">Actions</th>
            </tr>
            </thead>
            <tbody>

            @foreach (var item in Model.OrderIndexItemModels)
            {
                <tr>
                    <td><a href="@Url.Action("Edit", "Orders", new {id = item.OrderId,area="Supplier"})">@item.OrderId</a></td>
                    <td>@item.BankCompanyName  @item.BankBranchName</td>
                    <td>@item.CreationDate</td>
                    <td>@item.OrderStatus</td>
                    <td class="text-center">
                        <ul class="icons-list">

                            <li class="text-primary-600"><a href="@Url.Action("Edit", "Orders", new {id = @item.OrderId, area = "Supplier"})"><i class="icon-pencil7"></i></a></li>
                            <li class="text-danger-600"><a href="" class="deleteitem" data-target="#modaldelete" data-toggle="modal" data-id="@item.OrderId"><i class="icon-trash"></i></a></li>
                        </ul>
                    </td>
                </tr>
            }

            </tbody>
        </table>
    </div>
    <!-- /page length options -->


</div>
<!-- /content area -->
