@using FoodBank.Web.Helpers
@model FoodBank.Core.Dto.Product.ProductCreateModel

@{
    ViewBag.Title = "Product";
    ViewBag.MenuItem = "Product";
}


@section pageJs {
    <script type="text/javascript" src="/assets/js/plugins/forms/styling/uniform.min.js"></script>
    <script type="text/javascript" src="/assets/js/core/app.js"></script>
    <script type="text/javascript" src="/assets/js/pages/form_inputs.js"></script>

    @Scripts.Render("~/bundles/jqueryval")
}

<!-- Page header -->
@Html.Partial("Page/PageHeader")
<!-- /page header -->
<!-- Main content -->
<!-- Content area -->
<div class="content">
    <!-- Form horizontal -->
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title">Title</h5>
            <div class="heading-elements">
                <ul class="icons-list"></ul>
            </div>
        </div>
        <div class="panel-body">


            @using (Html.BeginForm("Create", "Product", new { area = "" }, FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
               
                <fieldset class="content-group">
                    @Html.TtcFullTextBoxFor(o => o.ProductName, "Product Name")
                    @Html.TtcFullTextAreaFor(o => o.Description, "Description", 5, 5)
                </fieldset>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>

            }
        </div>
    </div>
    <!-- /form horizontal -->

</div>
<!-- /content area -->
